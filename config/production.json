{
  "redis": {
    "host": "localhost",
    "port": 6379
  },
  "http": {
    "port": 8080
  },
  "log4js": {
    "appenders": [{
      "type": "clustered",
      "appenders": [{
        "type": "dateFile",
        "filename": "logs/access.log",
        "pattern": "-yyyy-MM-dd",
        "category": "http"
      }, {
        "type": "logLevelFilter",
        "level": "INFO",
        "appender": {
          "type": "dateFile",
          "filename": "logs/apps.log",
          "pattern": "-yyyy-MM-dd",
          "numBackups": 60
        }
      }, {
        "type": "logLevelFilter",
        "level": "ERROR",
        "appender": {
          "type": "dateFile",
          "filename": "logs/errors.log",
          "pattern": "-yyyy-MM-dd",
          "numBackups": 60
        }
      }]
    }]
  }
}
